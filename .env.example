# ============================================
# Kiyomi Engine - Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# Required vars are marked [REQUIRED], others are optional with defaults shown.

# ---- Core / Telegram ----
TELEGRAM_BOT_TOKEN=              # [REQUIRED] Your Telegram bot token from @BotFather
ALLOWED_USER_IDS=[]              # [REQUIRED] JSON array of allowed Telegram user IDs, e.g. [123456789]

# ---- Owner Info ----
KIYOMI_OWNER_EMAIL=              # Owner's email address
KIYOMI_OWNER_PHONE=              # Owner's phone number (for SMS alerts)
KIYOMI_TIMEZONE=UTC              # IANA timezone, e.g. "America/New_York"

# ---- Bot Identity ----
KIYOMI_BOT_NAME=Kiyomi           # Display name for the bot
KIYOMI_BOT_EMOJI=âœ¨              # Emoji used in bot responses
KIYOMI_OWNER_NAME=               # Owner's display name (used in greetings)

# ---- Morning Brief ----
KIYOMI_OWNER_CITY=New York       # City for weather in morning brief
KIYOMI_BRIEF_SECTIONS=weather,news,tasks  # Sections to include (weather,news,tasks,calendar)
KIYOMI_CUSTOM_BRIEF_SECTIONS=[]  # JSON array of custom section prompts
                                 # e.g. ["Daily Text from wol.jw.org", "Video script idea"]

# ---- Bot Email ----
KIYOMI_BOT_EMAIL=                # Bot's own email address
BOT_EMAIL_PASSWORD=              # Bot email password

# ---- Twilio (SMS) ----
TWILIO_PHONE=                    # Twilio phone number
TWILIO_ACCOUNT_SID=              # Twilio account SID
TWILIO_AUTH_TOKEN=               # Twilio auth token

# ---- AI APIs ----
GEMINI_API_KEY=                  # Google Gemini API key
RESEND_API_KEY=                  # Resend transactional email API key
FAL_KEY=                         # Fal AI (image generation) API key
GROK_API_KEY=                    # xAI/Grok API key

# ---- ElevenLabs (TTS / Voice) ----
ELEVENLABS_API_KEY=              # ElevenLabs API key
ELEVENLABS_VOICE_IDS={}          # JSON object mapping voice names to IDs, e.g. {"rick": "abc123"}

# ---- Supabase ----
SUPABASE_URL=                    # Supabase project URL
SUPABASE_ANON_KEY=               # Supabase anonymous/public key
SUPABASE_SERVICE_KEY=            # Supabase service role key (server-side only)

# ---- Paths (all have sensible defaults using $HOME) ----
KIYOMI_SKILLS_DIR=               # Skills directory (default: ~/kiyomi/skills)
KIYOMI_ENV_FILE=                 # Master .env file path (default: ~/.env.local)
KIYOMI_APPS_DIR=                 # Apps/projects root directory (default: ~/Apps)
KIYOMI_WORK_DIR=                 # Work/client projects directory (default: ~/Desktop/Work)
KIYOMI_ALLOWED_DIRS=             # JSON array of allowed directories for file ops
                                 # Default: ["~/Documents/", "~/Desktop/", "~/Downloads/"]

# ---- Voice (config.py) ----
KIYOMI_VOICE_ENABLED=false       # Enable ElevenLabs voice responses (true/false)
KIYOMI_VOICE_ID=                 # Default ElevenLabs voice ID
KIYOMI_VOICE_MODEL=eleven_multilingual_v2  # ElevenLabs model
KIYOMI_VOICE_STABILITY=0.5      # Voice stability (0.0-1.0)
KIYOMI_VOICE_SIMILARITY=0.75    # Voice similarity boost (0.0-1.0)
